@model ClinicWebApplication.DoctorSpeciality

@{
    ViewData["Title"] = "Створити";
}

@if (ViewBag.From == null)
{
    <h1>Створити</h1>

    <h4>Спеціальність лікаря</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Doctor.Name" class="control-label"></label>
                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Speciality.Name" class="control-label"></label>
                    <select asp-for="SpecialityId" class="form-control" asp-items="ViewBag.SpecialityId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Створити" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">До списку</a>
    </div>
}
else if (ViewBag.From == "doc")
{
    <h1>Додати</h1>

    <h4>Спеціальність для лікаря @ViewBag.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateForDoc" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@ViewBag.Id" name="DoctorId" />
                <div class="form-group">
                    <label asp-for="Speciality.Name" class="control-label"></label>
                    <select asp-for="SpecialityId" class="form-control" asp-items="ViewBag.SpecialityId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Створити" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index"asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name"asp-route-from="doc">До списку</a>
    </div>
}
else if (ViewBag.From == "spec")
{
    <h1>Додати</h1>

    <h4>Спеціальність @ViewBag.Name для лікаря </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateForSpec" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Doctor.Name" class="control-label"></label>
                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                </div>
                <input type="hidden" value="@ViewBag.Id" name="SpecialityId" />
                <div class="form-group">
                    <input type="submit" value="Створити" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index"asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name"asp-route-from="spec">До списку</a>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
