            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Редагувати</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

