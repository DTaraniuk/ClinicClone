@model IEnumerable<ClinicWebApplication.DoctorSpeciality>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.From == null)
{
    <h1>Спеціальності лікарів</h1>

    <p>
        <a asp-action="Create">Додати нову</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Doctor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speciality)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speciality.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else if (ViewBag.From == "doc")
{
    <h1>Спеціальності лікаря @ViewBag.Name</h1>

    <p>
        <a asp-action="Create" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Додати нову</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Speciality)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speciality.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Редагувати</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.From == "spec")
{
    <h1>Лікарі за спеціальністю @ViewBag.Name</h1>

    <p>
        <a asp-action="Create" asp-route-dsid="@ViewBag.Id" asp-route-name="@ViewBag.Name" asp-route-from ="@ViewBag.From">Додати нову</a>
