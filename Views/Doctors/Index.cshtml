@model IEnumerable<ClinicWebApplication.Doctor>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.From == "dep")
{
    <h1>Список лікарів з відділу @ViewBag.DepartmentName</h1>
    <p>
       <a asp-action="Create" asp-route-departmentId ="@ViewBag.DepartmentId">Додати лікаря</a>
    </p>
}
else if (ViewBag.From == "spec")
{
    <h1>Список лікарів за спеціальністю @ViewBag.SpecialityName</h1>
    <p>
       <a asp-action="Create" asp-route-specialityId ="@ViewBag.SpecialityId ">Додати лікаря</a>
    </p>
}
else
{
    <h1>Список всіх лікарів</h1>
    <p>
        <a asp-action="Create">Додати лікаря</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
