@model ClinicWebApplication.IllnessSymptom

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Симптом хвороби</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.IllnessChosenId != -1)
        {
        <form asp-action="Edit" asp-route-illnessIdX="@ViewBag.IllnessChosenId" asp-route-symptomIdX=-1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" value="@ViewBag.CurrentIllnessId" name="IllnessId" />
            <input type="hidden" value="@ViewBag.CurrentSymptomId" name="SymptomId" />
            <div class="form-group">
                <label asp-for="Frequency" class="control-label"></label>
                <input asp-for="Frequency" class="form-control" />
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
        }
        else 
        {
            <form asp-action="Edit" asp-route-illnessIdX=-1 asp-route-symptomIdX="@ViewBag.SymptomChosenId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" value="@ViewBag.CurrentIllnessId" name="IllnessId" />
                <input type="hidden" value="@ViewBag.CurrentSymptomId" name="SymptomId" />
                <div class="form-group">
                    <label asp-for="Frequency" class="control-label"></label>
                    <input asp-for="Frequency" class="form-control" />
                    <span asp-validation-for="Frequency" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

<div>
    @if (ViewBag.IllnessChosenId != -1)
    {
        <a asp-action="IndexByIllness" asp-route-id="@ViewBag.IllnessChosenId" asp-route-name="@ViewBag.IllnessName">Назад</a>
    }
    else 
    {
        <a asp-action="IndexBySymptom" asp-route-id="@ViewBag.SymptomChosenId" asp-route-name="@ViewBag.SymptomName">Назад</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
