@model ClinicWebApplication.PatientSymptom

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви точно хочете це видалити?</h3>
<div>
    <h4>Симптом пацієнта @ViewBag.patientName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Symptom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Symptom.Name)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-patientId="@ViewBag.patientId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
    </form>
    <a asp-action="Index" asp-route-patientId="@ViewBag.patientId">Назад</a>
</div>
