@model ClinicWebApplication.PatientSymptom

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Симптом пацієнта @ViewBag.patientName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-patientId ="@ViewBag.patientId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" value="@ViewBag.patientId" name="PatientId" />
            <div class="form-group">
                <label asp-for="Symptom.Name" class="control-label"></label>
                <select asp-for="SymptomId" class="form-control" asp-items="ViewBag.SymptomId"></select>
                <span asp-validation-for="SymptomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-patientId ="@ViewBag.patientId">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
